{
  "plugins": [
    "stylelint-scss"
  ],
  "extends": ["stylelint-config-standard"],
  "rules": {
    "color-hex-case": "upper",
    "indentation": 2,
    "selector-max-class": 2,
    "selector-max-pseudo-class": 1,
    "selector-max-specificity": "0,3,0",
    "selector-pseudo-element-colon-notation": "single",
    "string-quotes": "double"
  }
}